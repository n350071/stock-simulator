<p id="notice"><%= notice %></p>

<h1>Tickers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Symbol</th>
      <th>Time span</th>
      <th>Last reflashed at</th>
      <th>Time zone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickers.each do |ticker| %>
      <tr>
        <td><%= ticker.name %></td>
        <td><%= ticker.symbol %></td>
        <td><%= ticker.time_span %></td>
        <td><%= ticker.last_reflashed_at %></td>
        <td><%= ticker.time_zone %></td>
        <td><%= link_to 'Show', ticker %></td>
        <td><%= link_to 'Edit', edit_ticker_path(ticker) %></td>
        <td><%= link_to 'Destroy', ticker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

